<odoo>

    <record id="hr_contract_amendment_view_tree" model="ir.ui.view">
        <field name="model">hr.contract.amendment</field>
        <field name="arch" type="xml">
            <tree name="amendment_contract">
                <field name="contract_id"/>
                <field name="name"/>
                <field name="amendment_type"/>
                <field name="effective_date"/>
                <field name="user_id"/>
                <field name="date"/>
            </tree>
        </field>
    </record>

    <record id="hr_contract_amendment_view_form" model="ir.ui.view">
        <field name="model">hr.contract.amendment</field>
        <field name="arch" type="xml">
            <form name="amendment_contract">
                <sheet>
                    <group>
                        <field name="contract_id"/>
                        <field name="name"/>
                        <field name="effective_date"/>
                        <field name="amendment_type"/>
                        <field name="modifications_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <record id="action_hr_contract_amendment" model="ir.actions.act_window">
        <field name="name">Contracts Amendments</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.contract.amendment</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                <!-- Add Text Here -->
            </p>
            <p>
                <!-- More details about what a user can do with this object will be OK -->
            </p>
        </field>
    </record>

    <record id="hr_contract_amendment_changes_view_form" model="ir.ui.view">
        <field name="model">hr.contract.amendment.changes</field>
        <field name="arch" type="xml">
            <form name="view_changes_form">
                <sheet>
                    <group>
                        <field name="amendment_id"/>
                        <field name="value_name"/>
                        <field name="value_before"/>
                        <field name="value_new"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="hr_contract_amendment_changes_view_tree" model="ir.ui.view">
        <field name="model">hr.contract.amendment.changes</field>
        <field name="arch" type="xml">
            <tree name="view_changes_tree">
                <field name="value_name"/>
                <field name="value_before"/>
                <field name="value_new"/>
            </tree>
        </field>
    </record>

    <menuitem id="menu_action_hr_contract_amendment"
    action="action_hr_contract_amendment"
    parent="hr.menu_human_resources_configuration"
    sequence="6"/>
</odoo>
