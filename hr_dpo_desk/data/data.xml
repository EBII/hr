<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
        <record id="dpo_action_1" model="hr.dpo.action">
          <field name="name">Deleting Data</field>
          <field name="description">Action to delete some personnal information</field>
          <field name="period">Single</field>
        </record>

        <record id="dpo_action_2" model="hr.dpo.action">
          <field name="name">Control employee output</field>
          <field name="description">Action todo after employee output access account phone privacy action</field>
          <field name="period">Mensuelle</field>
        </record>

        <record id="dpo_action_renew_action" model="ir.actions.server">
        <field name="name">DPO DESK: Renew action</field>
        <field name="model_id" ref="model_hr_dpo_action"/>
        <field name="condition">True</field>
        <field name="type">ir.actions.server</field>
        <field name="state">code</field>
        <field name="code">record.renew_action()</field>
    </record>
    <record id="rule_dpo_1_renew_action" model="base.action.rule">
        <field name="name">HR Contract: check for pending</field>
        <field name="model_id" ref="model_hr_contract"/>
        <field name="sequence">50</field>
        <field name="kind">on_time</field>
        <field name="filter_id" ref="contract_open"/>
        <field name="trg_date_id" ref="hr_contract.field_hr_contract_date_end"/>
        <field name="trg_date_range">-7</field>
        <field name="trg_date_range_type">day</field>
        <field name="server_action_ids" eval="[(6, 0, [ref('dpo_action_renew_action')])]"/>

</odoo>
