<odoo>
    <record id="dpo_request_form" model="ir.ui.view">
        <field name="model">hr.dpo.request</field>
        <field name="arch" type="xml">
            <form name="DPO Desk">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="service"/>
                        <field name="employee"/>
                        <field name="state"/>
                        <field name="comment"/>
                        <field name="content"/>
                        <field name="action_ids"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="dpo_request_tree" model="ir.ui.view">
         <field name="model">hr.dpo.request</field>
        <field name="arch" type="xml">
            <tree name="dpo desk">
                <field name="name"/>
                <field name="service"/>
                        <field name="employee"/>
                        <field name="state"/>
            </tree>
        </field>
    </record>


