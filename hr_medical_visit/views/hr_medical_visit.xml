<odoo>
        <!-- Medical Visit -->
    <record id="hr_medical_visit_view_tree" model="ir.ui.view">
        <field name="name">hr.medical.visit.view.tree</field>
        <field name="model">hr.medical.visit</field>
        <field name="arch" type="xml">
            <tree name="Medical Visit">
                <field name="health_center_subscription"/>
                <field name="employee_id"/>
                <field name="visit_type"/>
                <field name="visit_date"/>
                <field name="visit_follow"/>
                <field name="next_visit_date" readonly="1"/>
            </tree>
        </field>
    </record>

    <record id="hr_medical_visit_view_form" model="ir.ui.view">
        <field name="name">hr.medical.visit.view.form</field>
        <field name="model">hr.medical.visit</field>
        <field name="arch" type="xml">
            <form name="Medical Visit">
                <group>
                    <field name="health_center_subscription"/>
                    <field name="company_ids" readonly="1"/>
                    <field name="visit_date"/>
                    <field name="visit_type"/>
                    <field name="smr_sms"/>
                    <field name="visit_doctor_nurse"/>
                    <field name="visit_result"/>
                    <field name="medical_recommendation_restriction"/>
                    <field name="visit_follow"/>
                    <field name="comment"/>
                </group>
            </form>
        </field>
    </record>

    <record id="action_hr_medical_visit_tree" model="ir.actions.act_window">
        <field name="name">Medical Visit</field>
        <field name="res_model">hr.medical.visit</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form,graph</field>
    </record>

    <record id="employee_medical_visit_search" model="ir.ui.view">
       <field name="model">hr.medical.visit</field>
        <field name="arch" type="xml">
            <search string="employee_id">
          <field name="employee_id" string="Employee" domain="[()]"/>
          <field name="health_center_subscription" string="Imatriculation number" domain="[()]"/>
          <field name="visit_type" string="Visit type" domain="[()]"/>
          <field name="visit_follow" string="Visit type" domain="[()]"/>
        </search>
       </field>
    </record>

    <menuitem id="menu_action_medical_visit"
              action="action_hr_medical_visit_tree" parent="hr.menu_hr_main" sequence="7"/>


</odoo>